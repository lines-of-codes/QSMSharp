@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <ServerNavMenu Id="@Id" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://lines-of-codes.github.io/QSMSharp/" target="_blank" class="link-primary">Help</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

@code {

    public int Id { get; set; }
    
    protected override void OnParametersSet()
    {
        if ((Body?.Target as RouteView)?.RouteData.RouteValues.TryGetValue("Id", out var id) ?? false)
        {
            if (id == null) return;
            Id = (int)id;
        }
    }

}
