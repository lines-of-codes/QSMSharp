<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="QSM.Windows.Pages.ServerConfig.ServerPerformanceConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QSM.Windows.Pages.ServerConfig"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="16" Margin="30,20">
        <Grid ColumnSpacing="12" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <NumberBox Header="Max Players:" Minimum="0" Value="{x:Bind _settings.MaxPlayers, Mode=TwoWay}" />
            <NumberBox Header="View Distance:" Minimum="3" Maximum="32" Grid.Row="1"
                       Value="{x:Bind _settings.ViewDistance, Mode=TwoWay}" />
            <NumberBox Header="Simulation Distance:" Minimum="3" Maximum="32" Grid.Column="1"
                       Value="{x:Bind _settings.SimulationDistance, Mode=TwoWay}" />
            <NumberBox Header="Max Tick Time:" Minimum="-1" Value="{x:Bind _settings.MaxTickTime, Mode=TwoWay}"
                       Grid.Row="1" Grid.Column="1" />
        </Grid>
        <NumberBox Header="Entity Broadcast Range Percentage:" Minimum="10" Maximum="1000"
                   Value="{x:Bind _settings.EntityBroadcastRangePercentage, Mode=TwoWay}" />
    </StackPanel>
</Page>
