<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="QSM.Windows.Pages.Settings.JavaListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QSM.Windows.Pages.Settings"
    xmlns:utils="using:QSM.Windows.Utilities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <CommandBar DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" x:Uid="/Common/ImportLabel">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="/JavaManager/PickJavaZip" x:Name="PickJavaZip" Click="PickJavaZip_Click" />
                        <MenuFlyoutItem x:Uid="/JavaManager/PickJavaFolder" x:Name="PickJavaFolder" Click="PickJavaFolder_Click" />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton 
                Icon="Delete" 
                x:Uid="/JavaManager/DeleteJavaButton" 
                x:Name="DeleteJavaButton" 
                Click="DeleteJavaButton_Click" />
        </CommandBar>
        <ListView ItemsSource="{x:Bind JavaInstallations, Mode=OneWay}" x:Name="JavaInstallationList">
            <ListView.Header>
                <Grid Padding="16,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           x:Uid="/JavaManager/VersionColHead" />
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           x:Uid="/JavaManager/VendorColHead"
                           Grid.Column="1" />
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           x:Uid="/JavaManager/PathColHead"
                           Grid.Column="2" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="utils:JavaInstallation">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85" />
                            <ColumnDefinition Width="155" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind Version}" />
                        <TextBlock Text="{x:Bind Vendor}" Grid.Column="1" />
                        <TextBlock Text="{x:Bind Path}" Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
