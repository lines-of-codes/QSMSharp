<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="QSM.Windows.GameplayConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QSM.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="16">
        <ComboBox Header="Gamemode:">
            <x:String>survival</x:String>
            <x:String>creative</x:String>
            <x:String>adventure</x:String>
            <x:String>spectator</x:String>
        </ComboBox>

        <ComboBox Header="Difficulty:">
            <x:String>peaceful</x:String>
            <x:String>easy</x:String>
            <x:String>normal</x:String>
            <x:String>hard</x:String>
        </ComboBox>

        <StackPanel>
            <CheckBox Content="Force Gamemode" />
            <CheckBox Content="Hardcore" />
            <CheckBox Content="PvP" />
            <CheckBox Content="Allow Flight" />
            <CheckBox Content="Allow Nether" />
        </StackPanel>
    </StackPanel>
</Page>
