<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="QSM.Windows.MultipleFileDownloadDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QSM.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ListView ItemsSource="{x:Bind files, Mode=OneWay}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="local:FileDownloadEntry">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <TextBlock x:Name="DownloadFileName" Text="{x:Bind FileName}" />
                    <TextBlock x:Name="DownloadProgressText" Text="{x:Bind ProgressText}" />
                    <ProgressBar 
                        x:Name="DownloadProgressBar" 
                        IsIndeterminate="True" 
                        Minimum="0" 
                        Maximum="100"
                        Value="{x:Bind Percentage}" />
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Page>
